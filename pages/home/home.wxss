/* pages/home/home.wxss */
/*轮播图*/
.banner-wrap {
  display: flex;
  justify-content: center;
  background: #fff;
  width: 100%;
  height: 385rpx;
}

.banner-wrap image {
  width: 100%;
  height: 100%;
}

.doctor_info {
  margin-top: 5rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

.doctor_info image {
  width: 100%;
}

.advisory {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.to_advisory {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 95%;
  height: 65rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  background-color: #4cb230;
  color: white;
  font-size: 25rpx;
  line-height: 80rpx;
  border-radius: 65rpx;
}

.kind_hot {
  display: flex;
  width: 100%;
  background-color: #fff;
  justify-content: center;
}

.commonlyUsed {
  margin-top: 8rpx;
  display: grid;
  grid-template-columns: 160rpx 160rpx 160rpx 160rpx;
}

.commonlyUsed_item {
  display: block;
  padding: 20rpx 0;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.commonlyUsed_item image {
  display: block;
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
  margin-bottom: 12rpx;
  background: pink;
  overflow: hidden;
  border-radius: 50%;
}

.commonlyUsed_item text {
  display: block;
  font-size: 22rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  padding-top: 3rpx;
  color: #666;
}
